<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/characteristic_field_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="@dimen/writable_container_value_horizontal_margin"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:background="@color/silabs_white"
        android:textSize="@dimen/characteristic_list_item_value_label_text_size"
        android:textColor="@color/silabs_subtle_text"
        tools:text="Characteristic field" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:background="@drawable/edit_text_box"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/characteristic_field_value_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_XS"
            android:hint="@string/enter_value"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:maxLines="1"
            android:textSize="@dimen/characteristic_list_item_value_text_size"
            android:textColor="@color/silabs_primary_text"
            android:background="@android:color/transparent"
            android:imeOptions="actionDone"
            android:textColorHint="@color/silabs_subtle_text"
            tools:text="Some value"/>

    </LinearLayout>

</LinearLayout>