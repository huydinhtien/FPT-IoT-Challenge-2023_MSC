<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/characteristic_field_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="@dimen/writable_container_value_horizontal_margin"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:background="@color/silabs_white"
        android:textSize="@dimen/characteristic_list_item_value_label_text_size"
        android:textColor="@color/silabs_subtle_text"
        tools:text="Characteristic field lorem ipsum three five" />

    <Spinner
        android:id="@+id/characteristic_field_value_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"/>
</LinearLayout>