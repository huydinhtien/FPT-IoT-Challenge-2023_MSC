<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="4dp" />
                    <stroke android:width="1dp" android:color="#666666" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_arrow_drop_down_active" android:gravity="center_vertical|end" android:left="8dp" android:right="8dp" />
        </layer-list>
    </item>

    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="4dp" />
                    <stroke android:width="1dp" android:color="@color/silabs_inactive_light" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_arrow_drop_down_inactive" android:gravity="center_vertical|end" android:left="8dp" android:right="8dp" />
        </layer-list>
    </item>

</selector>