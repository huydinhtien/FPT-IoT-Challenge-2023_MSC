<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="true"
        android:state_checked="true">
        <shape android:shape="oval">
            <size
                android:height="@dimen/switch_height"
                android:width="@dimen/switch_height" />
            <solid android:color="@color/silabs_white" />
            <stroke
                android:width="@dimen/switch_border_width"
                android:color="@color/silabs_blue" />
        </shape>
    </item>

    <item
        android:state_enabled="true"
        android:state_checked="false">
        <shape android:shape="oval">
            <size
                android:height="@dimen/switch_height"
                android:width="@dimen/switch_height"/>
            <solid android:color="@color/silabs_white" />
            <stroke
                android:width="@dimen/switch_border_width"
                android:color="@color/silabs_ripple_blue"/>
        </shape>
    </item>

    <item
        android:state_enabled="false"
        android:state_checked="false">
        <shape android:shape="oval">
            <size
                android:height="@dimen/switch_height"
                android:width="@dimen/switch_height"/>
            <solid android:color="@color/thumb_disabled" />
        </shape>
    </item>
</selector>
